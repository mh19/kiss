{
    "name": "plispe/kiss",
    "description": "The most innovative PHP devstack standing on the shoulder of giants",
    "license"     : "MIT",

    "require": {
        "php": "^7.0.0",

        "ext-mbstring": "*",
        "ext-intl": "*",

        "ad7six/dsn": "0.4.0",
        "adamwathan/form": "0.8.0",
        "anahkiasen/underscore-php": "2.0.0",
        "aura/router": "3.0.0",
        "bernard/bernard": "1.0.0-alpha1",
        "codegyre/robo": "0.6.0",
        "danielstjules/stringy": "2.1.0",
        "doctrine/annotations": "1.2.7",
        "doctrine/cache": "1.5.2",
        "doctrine/inflector": "1.1.0",
        "gordalina/cachetool": "1.10.0",
        "itsgoingd/clockwork": "1.9",
        "joegreen0991/error": "1.0.2",
        "latte/latte": "2.3.8",
        "league/monga": "1.2.3",
        "league/tactician": "0.6.1",
        "league/uri": "4.0.1",
        "monolog/monolog": "1.17.2",
        "nesbot/carbon": "1.21.0",
        "oscarotero/psr7-middlewares": "3.9.0",
        "php-di/php-di": "5.1.0",
        "relay/relay": "1.1.0",
        "symfony/http-foundation": "3.0.0",
        "symfony/http-kernel": "3.0.0",
        "tedivm/stash": "0.13.1",
        "tracy/tracy": "2.3.7",
        "vlucas/phpdotenv": "2.1.0",
        "zendframework/zend-diactoros": "1.3.1",
        "ocramius/psr7-session": "1.0.1"
    },
    "require-dev": {
        "codeception/codeception": "2.1.4",
        "jakub-onderka/php-parallel-lint": "0.9.2",
        "jakub-onderka/php-console-highlighter": "0.3.2",
        "halleck45/php-metrics": "1.8.3",
        "squizlabs/php_codesniffer": "2.5.0",
        "vinkla/climb": "0.7.0"
    },

    "suggest": {
        "dibi/dibi" : "Dibi is Database Abstraction Library for PHP",
        "ktamas77/firebase-php": "Firebase PHP Client",
        "knplabs/gaufrette": "PHP5 library that provides a filesystem abstraction layer",
        "league/flysystem": "Filesystem abstraction: Many filesystems, one API.",
        "league/plates": "Plates, the native PHP template system that's fast, easy to use and easy to extend.",
        "phpmailer/phpmailer": "PHPMailer is a full-featured email creation and transfer class for PHP",
        "php-middleware/php-debug-bar": "PHP Debug bar middleware with PSR-7",
        "pomm-project/cli": "Postgresql object model manager for PHP - CLI",
        "pomm-project/foundation": "Postgresql object model manager for PHP - Foundation",
        "pomm-project/model-manager": "Postgresql object model manager for PHP - Model Manager",
        "robmorgan/phinx": "PHP Database Migrations for Everyone",
        "swiftmailer/swiftmailer": "Swiftmailer, free feature-rich PHP mailer",
        "twig/twig": "Twig, the flexible, fast, and secure template language for PHP",
        "vlucas/spot2": "Simple and efficient DataMapper built on Doctrine DBAL",
        "xiaoler/blade": "Standalone Laravel Blade template"
    },

    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },

        "files": [
            "RoboFile.php",
            "app/functions.php",
            "app/factoriesLoader.php"
        ]
    },
    "scripts": {
        "cs": "composer robo devtools:check-php-coding-style",
        "lint": "composer robo devtools:check-php-syntax",
        "outdated": "vendor/bin/climb -vvv --ansi",
        "phpmetrics": "composer robo devtools:calculate-php-metrics",
        "robo": "bin/robo.php --ansi",
        "start": "composer robo devtools:run-php-server"

    }
}
